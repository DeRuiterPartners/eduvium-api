{
  "name": "eduvium-api",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx server/index-api.ts",
    "build": "npx esbuild server/index-api.ts --bundle --platform=node --packages=external --format=esm --outfile=dist/server-api.js",
    "start": "cross-env NODE_ENV=production node dist/server-api.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.0.0",
    "express": "^4.19.0"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "esbuild": "^0.20.0",
    "cross-env": "^7.0.3",
    "typescript": "^5.3.0"
  }
}
